<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yb.dao.ContractDao">
	<select id="getContract" resultType="ContractCome">
		select guessType,stakeId,status,matchId from contract where id=#{cid}
	</select>
	<select id="getOpenId" resultType="String">
		select createUser from create_contract where cid=#{cid}
	</select>
	<select id="getOpenLists" resultType="String">
		select uid from contract_user where cid=#{cid}
	</select>
	<select id="queryGuessByUid" resultType="String">
		select myGuess from contract_user where cid=#{cid} and uid=#{uid}
	</select>
	
	<update id="updateStatus">
		update contract set status=1 where id=#{cid}
	</update>

	<insert id="insertContract">
		insert into contract(id,guessType,stakeId,status,matchId,time)
		values(#{contractCome.id},#{contractCome.guessType},#{contractCome.stakeId}
		,#{contractCome.status},#{contractCome.matchId},now())
	</insert>
	<insert id="insertConstractCreate">
		insert into crate_contract(cid,createUser)values(#{cid},#{uid})
	</insert>
	<insert id="insertConstractUser">
		replace into constract_user(cid,uid,myGuess) values(#{cid},#{uid},#{myGuess})
	</insert>
	
	
	<select id="queryList" resultType="Integer">
		select id from contract where time &lt; DATE_SUB(NOW(),INTERVAL 30 MINUTE) and status=0
	</select>
	<delete id="delete">
		delete from contract where id=#{id}
	</delete>
	<delete id="deleteList">
		delete from contract where id in
		 <foreach collection="ids" open="(" close=")" item="item" separator="," >
			#{item}
		</foreach>
	</delete>
</mapper>